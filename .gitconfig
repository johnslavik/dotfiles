[user]
	email = bartosz@slawecki.dev
	name = johnslavik
	signingkey = ~/.ssh/id_ed25519.pub

[core]
    editor = hx
	pager = delta

[merge]
	conflictstyle = zdiff3

[rebase]
	autostash = true
	autosquash = true

[help]
	autocorrect = 20

[interactive]
	difffilter = delta --color-only

[delta]
	navigate = true

[includeif "gitdir:~/Python/"]
	path = "~/.gitconfig_python"

[includeif "gitdir:~/Wecamo/"]
	path = "~/.gitconfig_wecamo" 

[includeif "gitdir:~/HAI/"]
	path = "~/.gitconfig_hai"

[includeif "gitdir:~/PandaDoc/"]
    path = "~/.gitconfig_pandadoc"

[includeif "gitdir:~/PandaDocGH/"]
    path = "~/.gitconfig_pandadoc_github"

[commit]
	gpgsign = true

[gpg]
	format = ssh

[push]
	default = current
	autosetupremote = true

[rerere]
	enabled = true

[init]
	defaultbranch = main

[alias]
	tree = log --graph --decorate --pretty=oneline --abbrev-commit

[submodule]
	recurse = true
